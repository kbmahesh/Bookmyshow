@model Movie
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="addmovie">
        <h3>Edit Movie</h3>
        <form asp-action="UpdateMovie" asp-controller="Movie" method="post" enctype="multipart/form-data">
            <label class="label" asp-for="Id">Id:</label>
            <input class="field" asp-for="Id" type="text" readonly /><br />
            <label class="label" asp-for="MovieName">Name:</label>
            <input class="field" asp-for="MovieName" type="text" /><br />
            <label class="label">Upload File:</label>
            @if(Model.MovieImage != null && Model.MovieImage.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.MovieImage)" alt="Current Image" style="width:50px;height:50px"/>
            }else{
                <p>No image available.</p>
            }
            <input asp-for="MovieImage" class="field" type="file" name="imageFile" /><br />
            <div class="checkbox">
                <label class="label" asp-for="Status">Status</label>
                <input class="field" asp-for="Status" type="checkbox" /><br />
            </div>
            <label class="label" asp-for="Genre"></label>
            <select class="field" asp-for="Genre" asp-items="@ViewBag.GenreList" multiple>

            </select><br />
            <input class="button" type="submit" />
        </form>
    </div>
</body>
</html>